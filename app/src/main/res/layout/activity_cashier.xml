<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CashierActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รวม"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/total_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="XXX"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/total_value_currency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/total_label" />

            <TextView
                android:id="@+id/total_value_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="บาท"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/get_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รับ"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/get_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="XXX"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/get_value_currency"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/get_label" />

            <TextView
                android:id="@+id/get_value_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="บาท"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:columnCount="3">

            <Button
                android:id="@+id/cal7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="7"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="8"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="9"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="4"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="5"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="6"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@drawable/calculator_button_border"
                android:text="3"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

        </GridLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/cal20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button_border"
                android:text="20"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal50"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button_border"
                android:text="50"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

            <Button
                android:id="@+id/cal100"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button_border"
                android:text="100"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />
            <Button
                android:id="@+id/cal500"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button_border"
                android:text="500"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />
            <Button
                android:id="@+id/cal1000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button_border"
                android:text="1000"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/calculator_textSize" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cal0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/calculator_button_border"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/calculator_textSize" />

        <Button
            android:id="@+id/cal_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculator_button_border"
            android:text="."
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/calculator_textSize" />

        <Button
            android:id="@+id/cal_ac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/calculator_button_border"
            android:text="AC"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/calculator_textSize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPositive"
            android:text="ชำระเงิน"
            android:textColor="@color/colorTextAlt"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_void"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorNegative"
            android:text="ยกเลิก"
            android:textColor="@color/colorTextAlt"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>